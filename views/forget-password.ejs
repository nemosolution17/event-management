<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" type="text/css" href="/css/style.css" />

</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
              <h4> <span class="highlight">PartiFest</span> </h4>
            </div>
        </div>
    </header>
    <% include ./nav %>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h2 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Reset Password</h2>
        
        <% include ./partials/messages %>

                        
        <% if ( success_messages !='' ) { %>
          <div class="alert alert-success" >
              <strong><%= success_messages %> </strong>
          </div>
          <% } %>

      

        <form action="/forget-password" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>

          <div class="form-group">
          <label>Choose Account Type:
            <input list="atype" name="atype" /> </label>
            <datalist id="atype">
              <option value="User Account">
              <option value="Business Account">
         
            </datalist>
          </div>

          
      
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/register">Register</a> /
          <a href="/login">Login</a>

        </p>
      </div>
    </div>
  </div>

  
<footer>


  <p> PartiFest, Copyright &copy; 2019</p>


</footer>

</body>
</html>
